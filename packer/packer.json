{
  "variables": {
    "client_id": "",
    "client_secret": "",
    "tenant_id": "",
    "ami_name": "",
    "activation_id": "",
    "customer_id": ""
  },
  "builders": [
    {
      "type": "azure-arm",
      "subscription_id": "86d22e9c-bc56-49c3-a93a-0586bbb4ee79",
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "tenant_id": "{{user `tenant_id`}}",
      "managed_image_resource_group_name": "testrg",
      "managed_image_name": "{{user `ami_name`}}",
      "ssh_username": "azureuser",
      "ssh_password": "az8re@12345",
      "os_type": "Linux",
      "image_publisher": "OpenLogic",
      "image_offer": "CentOS",
      "image_sku": "7.5",
      "azure_tags": {
          "dept": "DevOps",
          "task": "Image deployment"
      },
      "location": "East US",
      "vm_size": "Standard_DS1_v2"
  }
  ],
  "description": "Azure image",
  "provisioners": [
    {
      "type": "shell",
      "script": "packer/scripts/ansible.sh"
    },

    {
      "type": "ansible-local",
      "playbook_file": "ansible/install.yml",
      "extra_arguments": [ 
        "-vvv",
        "--extra-vars", 
        "activation_id={{user `activation_id`}} customer_id={{user `customer_id`}}"],
      "role_paths": [
        "ansible/roles/git",
        "ansible/roles/centoscis"
      ]
    },
    {
      "type": "shell",
      "script": "packer/scripts/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "output": "packer/manifest.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ]
}
